<aside class="col-md-4 blog-sidebar">
  
  <div class="p-3 mb-3 bg-primary text-white rounded sidebar-module">
    <h4 class="font-italic">About</h4>
    <p class="mb-0">There is nothing more fulfilling than <em>sharing knowledge</em> with the people you love. This is my opportunity to share what I learn with the world!</p>
  </div>

    <%= source_helper("alert alert-info blog-sidebar-source") %>
  
    <% if @side_bar_topics %>  
      <div class="sidebar-module">
        <h4>Topics</h4>
        <% @side_bar_topics.each do |topic| %>
          <p><%= link_to topic.title, topic_path(topic) %></p>
        <% end %>
      </div>
    <% end %>
  

  <div class="p-3 sidebar-module">
    <h4 class="font-italic">Elsewhere</h4>
    <ol class="list-unstyled social-links">
      <li><a href="https://github.com/antwaunjohnson" target="_blank"><%= fa_icon "github" %></a></li>
      <li><a href="https://twitter.com/antwaunljohnson" target="_blank"><%= fa_icon "twitter" %></a></li>
      <li><a href="https://www.linkedin.com/in/antwaunljohnson"  target="_blank"><%= fa_icon "linkedin" %></a></li>
    </ol>
  </div>
  
</aside>
